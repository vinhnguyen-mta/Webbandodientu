@model List<Model.EF.Menu>
    <div class="headertop_desc">
        <div class="call">
            <p>
                <span>Need help?</span> call us <span class="number">1-22-3456789</span></span>
            </p>
        </div>
        <div class="account_desc">
            @{ 
                var session = (UserLogin)Session[OnlineShop1.Common.CommonConstants.USER_SESSION];
            }
            @if (session == null)
            {
                <ul>
                    @foreach (var item in Model)
                    {
                        <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
                    }
                </ul>
            }
            else
            {
                <ul>
                    <li>Xin chào: @session.UserName</li>
                    <li>@Html.ActionLink("Thoát","Logout","User")</li>
                </ul>
            }

        </div>
        <div class="clear"></div>
    </div>