@model Model.EF.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Amin/Views/Shared/_Layout.cshtml";
}

@section header{
    cập nhật người dùng
}


<div class="row">
    <div class="col-lg-12">
